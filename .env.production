# Production Environment Configuration
# IMPORTANT: Copy this to .env and fill in your actual values
# DO NOT commit .env to git!

# ============================================
# DOCKER CONFIGURATION
# ============================================
# Ensures consistent Docker image naming across environments
COMPOSE_PROJECT_NAME=expense-tracker

# ============================================
# DATABASE CONFIGURATION (Supabase Cloud)
# ============================================
# Get these from: Supabase Project Settings > Database
POSTGRES_HOST=db.xxxxxxxxxxxxx.supabase.co
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-actual-supabase-password

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS

# Your domain (e.g., https://expense.yourdomain.com)
API_BASE_URL=https://api.yourdomain.com

# ============================================
# WEB FRONTEND
# ============================================
WEB_PORT=3000

# ============================================
# TELEGRAM BOT
# ============================================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Bot username WITHOUT @ symbol
TELEGRAM_BOT_NAME=your_bot_username

# ============================================
# OPENAI API
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-actual-openai-key-here

# ============================================
# FOREIGN EXCHANGE CONFIGURATION
# ============================================
FX_PRIMARY=coingecko
ARS_SOURCE=blue

# ============================================
# PRODUCTION SETTINGS
# ============================================
DEBUG=false
LOG_LEVEL=INFO
